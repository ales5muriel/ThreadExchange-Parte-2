<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".FragmentNegro">

    <!-- Añade una imagen para representar la aplicación -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:scaleType="center"/>

    <!-- Añade un contenedor para el texto -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imageView"
        android:padding="16dp">

        <!-- Texto de descripción -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thread_exchange_es_m_s_que_una_aplicaci_n_es_un_portal_din_mico_hacia_el_mundo_de_la_moda_con_un_enfoque_en_la_ropa_y_accesorios_nuestra_plataforma_ofrece_a_los_entusiastas_de_la_moda_una_experiencia_nica_de_intercambio_descubrimiento_y_estilo"
            android:textSize="16sp"/>

        <!-- Botón de menú -->
        <Button
            android:id="@+id/button4"
            style="@style/AppButtonStyle"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENÚ"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- Contenedor para las imágenes -->
    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textContainer"
        android:gravity="center"
        android:padding="16dp">

        <!-- Primera imagen -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image1"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <!-- Segunda imagen -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image2"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <!-- Tercera imagen -->
        <ImageView
            android:id="@+id/image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image3"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</RelativeLayout>
